@using CarDealership.Models;

<h1>Cars:</h1>
<ul>
@if (Model.Count == 0)
{
  <p>You have no cars in your list!</p>
}
@if(Model.Count != 0)
{
  @foreach (Item item in Model)
  {
    <li><a href='/items/@item.GetId()'>@item.GetMakeModel()</a></li>

  }
}
</ul>
<a href="/items/new">Add a new car.</a>

<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>